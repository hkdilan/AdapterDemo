<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hkdilan.android.adapterdemo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hkdilan.android.adapterdemo.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SimpleArrayAdapterWithSpinner" android:label="Simple Array Adapter With Spinner" />
        <activity android:name=".SimpleArrayAdapterWithList" android:label="Simple Array Adapter With List" />
        <activity android:name=".CustomArrayAdapterActivity" android:label="Custom Array Adapter Activity" />
        <activity android:name=".CustomArrayAdapterWithCustomObjectActivity" android:label="Custom Array Adapter With Custom Object Activity" />
    </application>

</manifest>